<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="16dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/Hint"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/Photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Col1"
                app:srcCompat="@drawable/photo_user"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FAB_Delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                android:scaleType="fitXY"
                app:fabSize="mini"
                app:srcCompat="@drawable/delet" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Hint"
                android:orientation="vertical"
                android:layout_margin="8dp"

                >

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/AuxBlack"
                    android:gravity="left"
                    android:textSize="16sp"

                    android:layout_marginEnd="16dp"

                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/Direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion"
                    android:textColor="@color/AuxBlack"
                    android:gravity="left"
                    android:textSize="16sp"

                    android:layout_marginEnd="16dp"

                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textColor="@color/AuxBlack"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"

                    tools:ignore="RtlHardcoded" />


                <TextView
                    android:id="@+id/ElectorKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quien_reporto"
                    android:textColor="@color/Col5"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"

                    tools:ignore="RtlHardcoded" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:id="@+id/Notes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="clave de elector"
                        android:textColor="@color/Col5"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_weight="1"

                        android:layout_marginEnd="16dp"

                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha de registro"
                        android:textColor="@color/Col5"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_weight="1"

                        android:layout_marginEnd="16dp"

                        tools:ignore="RtlHardcoded" />




                </LinearLayout>


                <TextView
                    android:id="@+id/DirectBoss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jefe directo"
                    android:textColor="@color/Col5"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:layout_weight="1"

                    android:layout_marginEnd="16dp"

                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/Up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="subido"
                    android:textColor="@color/Col5"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:layout_weight="1"

                    android:layout_marginEnd="16dp"

                    tools:ignore="RtlHardcoded" />



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>