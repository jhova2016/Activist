<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="16dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/Hint"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/UP"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/AuxBlack"
            android:gravity="center"
            >



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Hint"
                android:orientation="vertical"
                android:layout_margin="8dp"

                >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"

        app:srcCompat="@drawable/name" />
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/AuxBlack"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"

        tools:ignore="RtlHardcoded" />

        </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >


            <ImageView

                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/direction" />

                    <TextView
                        android:id="@+id/Direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:textColor="@color/AuxBlack"
                        android:gravity="left"
                        android:textSize="16sp"

                        android:layout_marginEnd="16dp"

                        tools:ignore="RtlHardcoded" />

                        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >


                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:id="@+id/Phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefono"
                        android:textColor="@color/AuxBlack"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"

                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >


                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/electorkey" />

                    <TextView
                        android:id="@+id/ElectorKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="elector key"
                        android:textColor="@color/Col5"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"

                        tools:ignore="RtlHardcoded" />


                </LinearLayout>














            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>